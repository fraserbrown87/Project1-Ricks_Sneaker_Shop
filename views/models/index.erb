<table style="width:100%">
<section>
  <h2>All Stock</h2>
  <table>
    <thead>
      <tr>
        <th>Brand Name</th>
        <th>Model Name</th>
        <th>Style</th>
        <th>Quantity</th>
        <th>Stock Level</th>
        <th>Buy Price</th>
        <th>Retail Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
      </tr>
      <% @models.each do |model| %>

        <td><%=model.brand.brand_name%></td>
        <td><%=model.model_name%></td>
        <td><%=model.style%></td>
        <td><%=model.quantity%></td>
        <td><%=model.stock_level%></td>
        <td><%=model.buy_price%></td>
        <td><%=model.sell_price%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
